{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "KoS - Key On Screen",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "startDragging": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "msi"
      ],
      "identifier": "kos.dubis.dev",
      "publisher": "dubis.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "focus": false,
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "KoS - Key On Screen",
        "transparent": true,
        "decorations": false,
        "minWidth": 500,
        "minHeight": 40,
        "alwaysOnTop": true,
        "width": 600,
        "height": 65
      }
    ]
  }
}
